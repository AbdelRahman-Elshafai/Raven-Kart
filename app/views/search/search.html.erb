<% unless @products.nil? %>
  <div class="wrapper" id="wrapper">

  <!-- Start Shop Page -->
  <div class="page-shop-sidebar left--sidebar bg--white section-padding--lg">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-12 order-2 order-lg-1 md-mt-40 sm-mt-40">
          <%= render "shared/side_bar" %>
        </div>
        <div class="col-lg-9 col-12 order-1 order-lg-2">
          <div class="tab__container">
            <div class="shop-grid tab-pane fade show active" id="nav-grid" role="tabpanel">
              <div class="row">
                <% if @count > 0 %>
              <!-- Start Single Product -->
                <% @products.each do |product| %>
                  <div class="product product__style--3 col-lg-4 col-md-4 col-sm-6 col-12">
                    <div class="product__thumb">
                      <%= link_to product, :class => "first__img" do %>
                        <%= image_tag product.images[0] %>
                      <% end %>
                      <%= link_to product, :class => "second__img animation" do %>
                        <%= image_tag product.images[1]  %>
                      <% end %>
                    </div>
                    <div class="product__content content--center">
                      <h4><a href="single-product.html"><%= product.title %></a></h4>
                      <ul class="prize d-flex">
                        <li><%= product.price %></li>
                      </ul>
                      <div class="action">
                        <div class="actions_inner">
                          <% if (user_signed_in? and !current_user.seller?) or !user_signed_in? %>

                        <ul class="add_to_links">
                          <li> <%= render 'cart_products/cardform', product: product, object: @cart_product %></li>
                          </ul>
                          <% end %>

                        </div>
                      </div>
                      <div class="product__hover--content">
                        <ul class="rating d-flex">
                          <li class="on"><%= fa_icon('star') %></li>
                          <li class="on"><%= fa_icon('star') %></li>
                          <li class="on"><%= fa_icon('star') %></li>
                          <li><%= fa_icon('star') %></li>
                          <li><%= fa_icon('star') %></li>
                        </ul>
                      </div>
                    </div>
                  </div>
                <% end %>
                <% else %>
                  <h1>No Products Found</h1>
                <% end %>
                <!-- End Single Product -->
                <div class="apple_pagination">
                  <%= paginate @products unless @products.nil? %>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Shop Page -->

  </div>

<% end %>