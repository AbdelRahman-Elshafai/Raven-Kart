<%= bootstrap_form_with(model: @cart_product, url: add_to_cart_path , :html => {:id=>"card#{product.id}"}, local: true) do |f| %>
<%= f.hidden_field :product_id, value: product.id %>
<%= f.hidden_field :quantity, value: '1'%>
<%= link_to fa_icon('shopping-bag'), "", :onclick => "return addToCartFormSubmit('#card#{product.id}')" %>
<% end %>