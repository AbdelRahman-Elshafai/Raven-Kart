<section class="wn__product__area brown--color pt--80  pb--30">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section__title text-center">
          <h2 class="title__be--2">Random <span class="color--theme">Products</span></h2>
          <p>Never forget what you are. The rest of the world will not. Wear it like armor, and it can never be used to hurt you</p>
        </div>
      </div>
    </div>
    <!-- Start Single Tab Content -->
    <div class="slider center">
      <% @products.each do |product| %>
      <%= render "shared/product_card", product: product %>
      <% end %>
    </div>
    <!-- End Single Tab Content -->
  </div>
</section>


