<%= bootstrap_form_with(model: product, local: true)  do |f| %>
<%= f.text_field :title, placeholder: 'Title' %>
<%= f.text_area :description,  placeholder: 'Description .. ' %>
<%= f.number_field :price,  placeholder: '$price' %>
<%= f.number_field :stock,  placeholder: 'Stock quantity' %>
<%= f.select :brand_id, @brands, { 
      label: "Choose a brand", 
      wrapper: 
        { class: 'has-warning', data: { foo: 'bar' } } 
    }, {} %>
<%= f.select :category_id, @categories, 
    { label: "Choose a category", 
      wrapper: 
        { class: 'has-warning', data: { foo: 'bar' } } 
    }, {} %>
<%= f.file_field :images, multiple: true, direct_upload: true %>
<%= f.submit %>
<% end %>