<br>
<div class="wn__single__product">
  <div class="row">
    <div class="col-lg-6 col-12">
      <div class="wn__fotorama__wrapper">
        <div class="fotorama wn__fotorama__action" data-nav="thumbs">
          <a href="1.jpg"><%= image_tag "product/1.jpg" %></a>
          <a href="2.jpg"><%= image_tag "product/2.jpg" %></a>
          <a href="3.jpg"><%= image_tag "product/3.jpg" %></a>
          <a href="4.jpg"><%= image_tag "product/4.jpg" %></a>
          <a href="5.jpg"><%= image_tag "product/5.jpg" %></a>
          <a href="6.jpg"><%= image_tag "product/6.jpg" %></a>
          <a href="7.jpg"><%= image_tag "product/7.jpg" %></a>
          <a href="8.jpg"><%= image_tag "product/8.jpg" %></a>
        </div>
      </div>
    </div>
    <div class="col-lg-6 col-12">
      <div class="product__info__main">
        <h1><%= @product.title %></h1>
        <div class="product-reviews-summary d-flex">
          <ul class="rating d-flex">
            <li class="on"><%= fa_icon('star') %></li>
            <li class="on"><%= fa_icon('star') %></li>
            <li class="on"><%= fa_icon('star') %></li>
            <li><%= fa_icon('star') %></li>
            <li><%= fa_icon('star') %></li>
          </ul>
        </div>
        <div class="price-box">
          <span>$<%= @product.price %></span>
        </div>
        <div class="product__overview">
          <p><%= @product.description %></p>
        </div>
        <div class="box-tocart d-flex">
          <span>Qty</span>
          <input id="qty" class="input-text qty" name="qty" min="1" value="1" title="Qty" type="number">
          <div class="addtocart__actions">
            <button class="tocart" type="submit" title="Add to Cart">Add to Cart</button>
          </div>
          <div class="product-addto-links clearfix">
            <a class="wishlist" href="#"></a>
            <a class="compare" href="#"></a>
          </div>
        </div>
        <div class="product_meta">
          <span class="posted_in">Category:
            <a href="#"><%= @product.product_category%></a>
          </span>
        </div>
        <div class="product_meta">
        <span class="posted_in">Brand:
            <a href="#"><%= @product.product_brand%></a>
          </span>
        </div>
        <div class="product-share">
          <ul>
            <li class="categories-title">Share :</li>
            <li>
              <a href="#">
                <%= fa_icon('twitter') %>
              </a>
            </li>
            <li>
              <a href="#">
                <%= fa_icon('facebook') %>
              </a>
            </li>
            <li>
              <a href="#">
                <%= fa_icon('linkedin') %>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
