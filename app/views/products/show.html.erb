<br>
<div class="wn__single__product">
  <div class="row">
    <div class="col-lg-6 col-12">
      <div class="wn__fotorama__wrapper">
        <div class="fotorama wn__fotorama__action" data-nav="thumbs">
          <% if @product.images.attached? %>
          <% @product.images.each do |image| %>
          <%= image_tag image, target: :blank %>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-6 col-12">
      <div class="product__info__main">
        <h1><%= @product.title %></h1>
        <div class="product-reviews-summary d-flex">
          <ul class="rating d-flex">
            <li class="on"><%= fa_icon('star') %></li>
            <li class="on"><%= fa_icon('star') %></li>
            <li class="on"><%= fa_icon('star') %></li>
            <li><%= fa_icon('star') %></li>
            <li><%= fa_icon('star') %></li>
          </ul>
        </div>
        <div class="price-box">
          <span>$<%= @product.price %></span>
        </div>
        <div class="product__overview">
          <p><%= @product.description %></p>
        </div>
        <div class="box-tocart d-flex">
          <% if  @availabile or !user_signed_in? or !current_user.seller? %>
          <span>Qty</span>
          <%= render 'cart_products/form', object: @cart_product %>
          <% end %>
        </div>
        <div class="product_meta">
          <span class="posted_in">Category:
            <a href="#"><%= @product.product_category%></a>
          </span>
        </div>
        <div class="product_meta">
          <span class="posted_in">Brand:
            <a href="#"><%= @product.product_brand%></a>
          </span>
        </div>
        <div class="product_meta">
          <span class="posted_in">Availability:
            <% if @availabile %>
            <a href="#" style="color:green;">Availabile</a>
            <% else %>
            <a href="#" style="color:red;">Out of stock</a>
            <% end %>
          </span>
        </div>
        <div class="product-share">
          <ul>
            <li class="categories-title">Share :</li>
            <li>
              <a href="#">
                <%= fa_icon('twitter') %>
              </a>
            </li>
            <li>
              <a href="#">
                <%= fa_icon('facebook') %>
              </a>
            </li>
            <li>
              <a href="#">
                <%= fa_icon('linkedin') %>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%if can? :update, @product %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<% end%>