<%@products.each do |product|%>
<div class="product product__style--3">
  <div class="product__thumb">
    <a class="first__img" > <%= link_to product, :class => "first__img" do %>
      <%= image_tag product.images[0] %>
      <% end %></a>
       <%= link_to product, :class => "second__img animation" do %>
      <%= image_tag product.images[1]  %>
      <% end %>
  </div>
  <div class="product__content content--center">
    <div class="action">
      <div class="actions_inner">
          <% if !user_signed_in? or !current_user.seller?  %>
          <ul class="add_to_links">
            <li> <%= render 'cart_products/cardform', product: product, object: @cart_product %></li>
          </ul>
          <% end %>
        </div>
    </div>
  </div>
</div>
<%end%>