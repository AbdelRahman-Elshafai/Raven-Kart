<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table>
  <thead>
    <tr>
      <th>Store name</th>
      <th>Number of products</th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.products.count %></td>
        <td><%= link_to 'Show', store_path(store) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

